<div id="<%= dom_id(comment) %>" class="rounded-2xl border border-slate-200 bg-white p-4 shadow-sm shadow-sky-50">
  <div class="flex items-start justify-between gap-3">
    <div class="space-y-1">
      <p class="text-sm text-slate-800"><%= comment.content %></p>
      <p class="text-xs font-medium text-slate-500">Posted <%= comment.created_at.strftime("%b %-d, %Y %l:%M %p") %></p>
      <% if comment.user %>
        <p class="text-xs font-semibold text-slate-700">By <%= comment.user.username %> (<%= comment.user.email %>)</p>
      <% end %>
    </div>
    <div class="flex items-center gap-2">
      <% if allowed_to?(:destroy?, comment) %>
        <%= button_to "Delete", [comment.post, comment], method: :delete, data: { turbo_confirm: "Remove this comment?" }, class: "inline-flex items-center gap-2 rounded-lg border border-rose-200 bg-rose-50 px-3 py-1.5 text-[11px] font-semibold text-rose-700 shadow-sm transition hover:border-rose-300 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-rose-400" %>
      <% end %>
    </div>
  </div>
</div>
